<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <Button
        android:id="@+id/control_led_disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disconnect"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="32dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical|left"
        android:orientation="horizontal"
        >
    <GridLayout
        android:layout_width="161dp"
        android:layout_height="162dp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="164dp"
        >

        <Button
            android:id="@+id/turn_right"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="2"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_input_add"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="96dp"
            app:iconTint="#FFC107"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/turn_left"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_row="1"
            android:layout_column="0"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/checkbox_off_background"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="60dp"
            app:iconTint="#850374"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/go_up"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="0"
            android:layout_column="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="60dp"
            app:iconTint="#CF0E24" />

        <Button
            android:id="@+id/go_down"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_row="2"
            android:layout_column="1"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@android:drawable/ic_delete"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="65dp"
            app:iconTint="#0FAA03" />

    </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal|center_vertical|right"
        android:orientation="horizontal"
        >

        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:id="@+id/joyStick"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:gravity="center_horizontal|center_vertical|right"
            app:JV_backgroundColor="#009688"
            app:JV_backgroundSizeRatio="60%"
            app:JV_borderColor="#00796B"
            app:JV_borderWidth="4dp"
            app:JV_buttonColor="#FF6E40"
            app:JV_buttonSizeRatio="20%"
            app:JV_fixedCenter="false"
            tools:layout_editor_absoluteX="508dp"
            tools:layout_editor_absoluteY="227dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>